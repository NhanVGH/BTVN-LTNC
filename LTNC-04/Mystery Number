#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int x;
    cin >> x;
    int y = x + 1;
    int sumx = 0, sumy = 0;
    int arrA[x];
    for (int i = 0; i < x; i++) {
        cin >> arrA[i];
        sumx += arrA[i];
    }
    
    int arrB[y];
    for (int i = 0; i < y; i++) {
        cin >> arrB[i];
        sumy += arrB[i];
    }
    int res = abs(sumy - sumx);
    cout << res;
    
    return 0;
}
